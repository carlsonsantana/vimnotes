set encoding=utf-8

" Show line numbers
set number
set relativenumber

set whichwrap+=<,>,h,l

map j gj
map k gk

" Support suggestion for VIM commands
set wildmenu
set wildmode=list:longest,full

" Search
set hlsearch
set incsearch
set ignorecase
set smartcase

" Visual improvement
set scrolloff=5

" Status line
let g:airline_powerline_fonts = 0
let g:airline_symbols_ascii = 1
